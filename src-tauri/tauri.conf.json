{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "resuma",
  "version": "0.1.0",
  "identifier": "com.resuma.app",
  "mainBinaryName": "resuma",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "resuma",
        "width": 1600,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "permissions": {
        "all": true
      }
    }
  }
}
