{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/refs/heads/dev/crates/tauri-schema-generator/schemas/config.schema.json",
  "productName": "Resuma",
  "version": "1.0.1",
  "identifier": "com.resuma.app",
  "mainBinaryName": "Resuma",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Resuma",
        "width": 1600,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "deb", "rpm", "dmg"],
    "license": "GPL-3.0",
    "licenseFile": "license.txt",
    "publisher": "Nikola Ranđelović",
    "copyright": "Resuma © 2025",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "sidebarImage": "icons/banner.bmp"
      }
    }
  },
  "plugins": {
    "shell": {
      "permissions": {
        "all": true
      }
    }
  }
}
